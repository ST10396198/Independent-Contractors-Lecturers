<!DOCTYPE html>
<html lang="en">
<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewData["Title"] - ContractMonthlyClaimSystem</title>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		<link rel="stylesheet" href="~/ContractMonthlyClaimSystem.styles.css" asp-append-version="true" />

		<!-- jQuery and Popper.js -->
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

		<title>@ViewData["Title"]</title>
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
				<div class="container">
					<a class="navbar-brand" asp-area="" asp-page="/Index">CMCS</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
							</li>
							<li class="nav-item">
								<!-- Use href because Dashboard is a base for other dashboards -->
								<a class="nav-link text-dark" href="/Dashboard">My Dashboard</a>
							</li>
						</ul>
						<ul class="navbar-nav ms-auto">
							@if (Context.Session.GetString("UserFirstName") != null && Context.Session.GetString("UserLastName") != null)
							{
								<li class="nav-item">
									<a class="nav-link text-dark">Hello, @Context.Session.GetString("UserFirstName") @Context.Session.GetString("UserLastName")!</a>
								</li>
								<li class="nav-item mx-1">
									<form method="post" asp-page-handler="Logout" asp-page="/Users/Logout" class="d-inline">
										<button type="submit" class="btn btn-danger">
											Logout
										</button>
									</form>
								</li>
							}
							else
							{
								<li class="nav-item mx-1">
									<a class="btn btn-dark" asp-area="" asp-page="/Users/Login">Login</a>
								</li>
								<li class="nav-item mx-1">
									<a class="btn btn-outline-dark" asp-area="" asp-page="/Users/SignUp">Sign Up</a>
								</li>
							}
						</ul>
					</div>
				</div>
			</nav>
			@await Html.PartialAsync("_ModalPopUp")
		</header>
		<div class="container">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>

		<footer class="border-top footer text-muted">
			<div class="container">
				&copy; 2024 - ContractMonthlyClaimSystem - <a asp-area="" asp-page="/Privacy">Privacy</a>
			</div>
		</footer>

		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
		<script src="~/js/site.js" asp-append-version="true"></script>

		@await RenderSectionAsync("Scripts", required: false)
	</body>
</html>
